@*@model IEnumerable<Toymania.Models.ApplicationUser>*@
@model Toymania.ViewModels.AccountManageViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container container-body2">
        <h2>Application manager</h2>
        <p>
            @Html.ActionLink("Create Account", "RegisterA", "Account")
        </p>

        <html>
        <head>
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <title>OrderDetails</title>
            <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
        </head>
        <body>
            <br />
            <div class="container">
                <div class="row">
                    <div class="col-xs-6 ODT">
                        <ul class="nav nav-tabs">
                            <li @*class="active"*@>
                                <a href="#Customers" data-toggle="tab">Customer accounts</a>
                            </li>
                            <li>
                                <a href="#Admins" data-toggle="tab">Admin accounts</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div id="Customers" class="tab-pane">
                                <table class="table">
                                    <tr>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.c.Email)*@
                                            @Html.DisplayNameFor(model => model.c[1].Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.c[1].EmailConfirmed)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.c[1].LockoutEndDateUtc)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.c[1].LockoutEnabled)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.c[1].AccessFailedCount)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.c[1].UserName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.c[1].Role)
                                        </th>
                                        <th></th>
                                    </tr>
                                    @foreach (var item in Model.c)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EmailConfirmed)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LockoutEndDateUtc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LockoutEnabled)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AccessFailedCount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UserName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Role)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Set user as Admin", "SUA", new { id = item.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("ban", "ban", new { id = item.Id })
                                                @if (item.LockoutEndDateUtc != null)
                                                {
                                                    @Html.ActionLink("unban", "unban", new { Id = item.Id })
                                                }
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                            <div id="Admins" class="tab-pane active">
                                <table class="table">
                                    <tr>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.c.Email)*@
                                            @Html.DisplayNameFor(model => model.c[1].Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.c[1].EmailConfirmed)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.c[1].LockoutEndDateUtc)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.c[1].LockoutEnabled)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.c[1].AccessFailedCount)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.c[1].UserName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.c[1].Role)
                                        </th>
                                        <th></th>
                                    </tr>
                                    @foreach (var item in Model.a)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EmailConfirmed)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LockoutEndDateUtc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LockoutEnabled)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AccessFailedCount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UserName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Role)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Set user as Customer", "SUC", new { id = item.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("ban", "ban", new { id = item.Id })
                                                @if (item.LockoutEndDateUtc != null)
                                                {
                                                    @Html.ActionLink("unban", "unban", new { Id = item.Id })
                                                }
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
            </script>
            <script src="bootstrap/js/bootstrap.min.js"></script>
            </div>
        </body>
    </html>
