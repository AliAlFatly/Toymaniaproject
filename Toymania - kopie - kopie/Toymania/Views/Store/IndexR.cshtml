                @Html.ActionLink("100,00 - 499,99 euro", "index", new { C = ViewData["Category"], SC = ViewData["SubCategory"], PC = 5 }) <br />
                @Html.ActionLink("500,00+ euro", "index", new { C = ViewData["Category"], SC = ViewData["SubCategory"], PC = 6 }) <br />
            </li>
        </div>

        <div class="col-md-12 SCT1">
            <p><strong>Subcategories </strong></p>
            @if (Model.SC != null)
            {
                <div class="categorie">
                    @foreach (var item in Model.SC)
                    {
                        <div class="filters">
                            @Html.ActionLink(item.SCName, "index", new { C = ViewData["Category"], SC = item.SCName })
                        </div>
                    }
