@model IEnumerable<Toymania.Models.Toy>

@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container container-body">
    @if (Model != null)
    {
        <div class=" toymenu col-md-8">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <p>
                        <img src="@Url.Content("~/Content/img/"+item.ItemArtUrl)" />
                    </p>
                    <p>
                        @Html.ActionLink(item.ToysName, "Details", "store", new { id = item.ToysId }, null)
                    </p>
                    <p>
                        <em>Price:</em>
                        @String.Format("{0:F} Euro", item.Price)
                    </p>
                </div>
            }
        </div>
    }
    <div class="footer"></div>
    <div class="row footer_icons">
        <i class="fab fa-facebook"></i>
        <i class="fab fa-twitter"></i>
        <i class="fab fa-instagram"></i>
    </div>
</div>


