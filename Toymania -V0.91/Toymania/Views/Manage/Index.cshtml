@model Toymania.Models.IndexRViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>Customer@*@ViewBag.Title.*@</h2>

@*<p class="text-success">@ViewBag.StatusMessage</p>*@
<div>
    @*<h4>TXT</h4>*@

    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
        <dt>Orders:</dt>
        <dd>
            [ @Html.ActionLink("View your Orders", "Index", "Orders") ]
        </dd>
        @*<dt>History:</dt>
        <dd>
            [@Html.ActionLink("View your completed orders and order history", "Index", "Orders")]
        </dd>*@
        <dt>Cart:</dt>
        <dd>
            [ @{Html.RenderAction("CartSummary", "ShoppingCart");} ]
        </dd>
        <dt>Wishlist:</dt>
        <dd>
            [ @Html.ActionLink("View your wishlist", "Index", "WishlistManager") ]
        </dd>
        <dt>Store:</dt>
        <dd>
            [ @Html.ActionLink("View our toys store", "Index", "store") ]
        </dd>
        <dt>Update Balance:</dt>
        <dd>
            [ @Html.ActionLink("Entere a coupon code", "UB", "Coupon") ]
        </dd>
    </dl>
</div>

<div>
    @if (Model.isAdmin | Model.isOwner)
    {
        <h2>Admin@*@ViewBag.Title.*@</h2>
        <hr />
        <dl class="dl-horizontal">
            <dt>Toymanager:</dt>
            <dd>
                [ @Html.ActionLink("View the Store toys in a table and add/edit/remove toys", "Index", "ToyManager") ]
            </dd>
            <dt>Stats:</dt>
            <dd>
                [ @Html.ActionLink("View sales stats for a selected year", "Index", "Stats") ]
            </dd>
            <dt>Ordersdetail:</dt>
            <dd>
                [ @Html.ActionLink("View the customer orders and edit the order status", "Index", "OrderDetails") ]
            </dd>
            <dt>Orderstracker:</dt>
            <dd>
                [ @Html.ActionLink("track the customers orders and edit the order track status", "Index", "Tracker") ]
            </dd>

            <dt>Coupon Generator:</dt>
            <dd>
                [ @Html.ActionLink("Generate a Coupon", "Index", "Coupon") ]
            </dd>
        </dl>
    }


</div>

<div>
    @if (Model.isOwner)
    {
        <h2>Owner@*@ViewBag.Title.*@</h2>
        <dl class="dl-horizontal">
            <dt>Usermanager:</dt>
            <dd>
                [ @Html.ActionLink("View the customer accounts and add/edit/remove accounts", "Index", "ApplicationUsers") ]
            </dd>
        </dl>
    }
    @*<h4>TXT</h4>*@
</div>






